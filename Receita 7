    <script type="module" src="./tableGenerator.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
            margin: 0;
            padding: 0;
        }

        #dataDiv {
            margin-top: 20px;
